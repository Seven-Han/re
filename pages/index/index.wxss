/**index.wxss**/
.card {
  background:rgba(255,255,255,0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10px;
  padding: 10px 0;
  border-radius: 10px;
  overflow: hidden;
  position: relative;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.bumen {
  font-size: 12px;
}
.company {
  font-size: 12px;
}
.card-bg{
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
}
.vcard{
  width: 100%;
  background: transparent;
}
.vcard::before, .vcard::after{
  border: none;
}